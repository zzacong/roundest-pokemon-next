{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "$server": ["server"],
      "$server/*": ["server/*"],
      "$components": ["components"],
      "$components/*": ["components/*"],
      "$env": ["env"],
      "$env/*": ["env/*"],
      "$lib": ["lib"],
      "$lib/*": ["lib/*"],
      "$pages": ["pages"],
      "$pages/*": ["pages/*"],
      "$public": ["../public"],
      "$public/*": ["../public/*"],
      "$styles": ["styles"],
      "$styles/*": ["styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules"]
}
